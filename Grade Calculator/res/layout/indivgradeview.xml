<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:paddingLeft="36dp">
	<ImageView android:id="@+id/ImageView01" android:src="@drawable/android:ic_delete"
		android:layout_width="wrap_content" android:layout_height="wrap_content"  android:scaleType="fitXY"/>
	<TextView android:text="@+id/TextView01" android:id="@+id/TextView03"
		android:layout_weight="1" android:textSize="20dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="#C58917" android:paddingLeft="36dp" />
	<TextView android:text="@+id/TextView02" android:id="@+id/TextView01"
		android:layout_weight="1" android:textSize="20dp"
		android:paddingRight="36dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="#C58917"
		android:layout_toLeftOf="@+id/TextView02" />
	<TextView android:text="@+id/TextView03" android:id="@id/TextView02"
		android:layout_weight="1" android:textSize="20dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="#C58917" android:layout_alignParentRight="true" />

</RelativeLayout>
